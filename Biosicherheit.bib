  keywords = {communicable disease control,global health governance,Globalization,Health security,international health regulations,quarantine,regime analysis,World Health Organization},
  file = {Hoffman10evolutiona_Health Policy and Planning.pdf:/Users/henning/Documents/Arbeit/Datenbanken/pdf_Datenbank/Health Policy and Planning/2010/Hoffman10evolutiona_Health Policy and Planning.pdf:application/pdf;Snapshot:/Users/henning/Documents/Arbeit/Datenbanken/Zotero/storage/R43VRUBD/510.html:},
